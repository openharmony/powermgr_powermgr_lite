{
  "name": "@ohos/powermgr_lite",
  "version": "3.1",
  "description": "轻设备电源管理服务。",
  "homePage": "https://gitee.com/openharmony",
  "license": "Apache License 2.0",
  "repository": "https://gitee.com/openharmony/powermgr_powermgr_lite",
  "domain": "os",
  "language": "",
  "publishAs": "",
  "private": false,
  "scripts": {},
  "dirs": [
    "base/powermgr/powermgr_lite"
  ],
  "segment": {
    "destPath": "base/powermgr/powermgr_lite"
  },
  "component": {
    "name": "powermgr_lite",
    "subsystem": "powermgr",
    "syscap": [
        "SystemCapability.PowerManager.PowerManager.Lite"
    ],
    "features": [],
    "adapted_system_type": [
      "mini",
      "small"
    ],
    "rom": "22KB",
    "ram": "~10KB",
    "output": [
      "libpowermgr.so",
      "libpowermgrservice.so"
    ],
    "deps": {
      "components": [
        "utils_lite",
        "samgr_lite",
        "ipc",
        "hilog_lite",
        "window_manager_lite"
      ],
      "third_party": [
        "bounds_checking_function"
      ]
    },
    "build": {
      "sub_component": [
       "//base/powermgr/powermgr_lite:powermgr_lite"
      ],
      "inner_kits": [
        {
          "name":"//base/powermgr/powermgr_lite/interfaces/kits/battery/js/builtin:libnativeapi_battery_simulator",
          "header":{
            "header_files": [
              "battery_impl.h",
              "battery_module.h"
            ],
            "header_base": "//base/powermgr/powermgr_lite/interfaces/kits/battery/js/builtin/include"
          }
        }
      ],
      "test": [
        "//base/powermgr/powermgr_lite/test/Interface_test:unittest"
      ]
    }
  }
}
